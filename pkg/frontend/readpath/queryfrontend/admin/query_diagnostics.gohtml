<!DOCTYPE html>
<html data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Query Diagnostics</title>

    <link rel="stylesheet" href="/static/bootstrap-5.3.3.min.css">
    <link rel="stylesheet" href="/static/bootstrap-icons-1.8.1.css">
    <link rel="stylesheet" href="/static/pyroscope-styles.css">
    <link rel="stylesheet" href="/query-diagnostics/static/styles.css">
    <script src="/static/bootstrap-5.3.3.bundle.min.js"></script>
    <script src="/query-diagnostics/static/util.js"></script>
</head>
<body>
<main>
    <div class="container mt-5">
        <div class="header row border-bottom py-3 flex-column-reverse flex-sm-row">
            <div class="col-12 col-sm-9 text-center text-sm-start">
                <h1>Query Diagnostics</h1>
                <p class="text-muted">
                    Debug V2 query execution by running queries and viewing execution traces
                    <span class="ms-2">|</span>
                    <a href="/query-diagnostics" class="ms-2">
                        <i class="bi bi-plus-circle"></i> New Query
                    </a>
                    <span class="ms-2">|</span>
                    <a href="/query-diagnostics/list" class="ms-2">
                        <i class="bi bi-clock-history"></i> View Stored Diagnostics
                    </a>
                </p>
            </div>
            <div class="col-12 col-sm-3 text-center text-sm-end mb-3 mb-sm-0">
                <a href="/">
                    <img alt="Pyroscope logo" class="pyroscope-brand" src="/static/pyroscope-logo.png">
                </a>
            </div>
        </div>

        {{ if .Error }}
        <div class="alert alert-danger mt-3" role="alert">
            <strong>Error:</strong> {{ .Error }}
        </div>
        {{ end }}

        <form id="query-form" onsubmit="return executeQuery(event)">
            <div class="row mt-4">
                <div class="col-12 col-lg-5">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Query Parameters</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-section">
                                <label for="tenant_id" class="form-label">Tenant ID</label>
                                <select class="form-select" id="tenant_id" name="tenant_id" onchange="onTenantChange()" required>
                                    <option value="">-- Select tenant --</option>
                                    {{ range .Tenants }}
                                    <option value="{{ . }}" {{ if eq $.TenantID . }}selected{{ end }}>{{ . }}</option>
                                    {{ end }}
                                </select>
                            </div>

                            <div class="form-section">
                                <label for="method" class="form-label">API Method</label>
                                <select class="form-select" id="method" name="method" onchange="updateQueryParams()">
                                    {{ range .QueryMethods }}
                                    <option value="{{ . }}" {{ if eq $.Method . }}selected{{ end }}>{{ . }}</option>
                                    {{ end }}
                                </select>
                            </div>

                            <div class="row form-section">
                                <div class="col-6">
                                    <label for="start_time" class="form-label">Start Time</label>
                                    <input type="text" class="form-control" id="start_time" name="start_time"
                                           value="{{ .StartTime }}" placeholder="now-1h" required>
                                </div>
                                <div class="col-6">
                                    <label for="end_time" class="form-label">End Time</label>
                                    <input type="text" class="form-control" id="end_time" name="end_time"
                                           value="{{ .EndTime }}" placeholder="now" required>
                                </div>
                            </div>

                            <div class="form-section">
                                <label for="label_selector" class="form-label">Label Selector</label>
                                <input type="text" class="form-control" id="label_selector" name="label_selector"
                                       value="{{ .LabelSelector }}" placeholder='{service_name="my-service"}'>
                            </div>

                            <div class="form-section query-param" id="param-profile-type-id">
                                <label for="profile_type_id" class="form-label">Profile Type ID</label>
                                <select class="form-select" id="profile_type_id" name="profile_type_id" data-initial-value="{{ .ProfileTypeID }}">
                                    <option value="">-- Select tenant first --</option>
                                </select>
                                <div class="form-text">Select a tenant to load available profile types</div>
                            </div>

                            <!-- MaxNodes -->
                            <div class="form-section query-param" id="param-max-nodes">
                                <label for="max_nodes" class="form-label">Max Nodes</label>
                                <input type="number" class="form-control" id="max_nodes" name="max_nodes"
                                       value="{{ .MaxNodes }}" placeholder="16384">
                                <div class="form-text">Maximum number of nodes in the result</div>
                            </div>

                            <!-- Profile Format -->
                            <div class="form-section query-param" id="param-format">
                                <label for="format" class="form-label">Profile Format</label>
                                <select class="form-select" id="format" name="format">
                                    <option value="PROFILE_FORMAT_FLAMEGRAPH" {{ if or (eq .Format "") (eq .Format "PROFILE_FORMAT_FLAMEGRAPH") }}selected{{ end }}>Flame Graph</option>
                                    <option value="PROFILE_FORMAT_TREE" {{ if eq .Format "PROFILE_FORMAT_TREE" }}selected{{ end }}>Tree</option>
                                </select>
                                <div class="form-text">Format of the profile response</div>
                            </div>

                            <!-- Span Selector -->
                            <div class="form-section query-param" id="param-span-selector">
                                <label for="span_selector" class="form-label">Span IDs (comma-separated)</label>
                                <input type="text" class="form-control" id="span_selector" name="span_selector"
                                       value="{{ .SpanSelector }}" placeholder="9a517183f26a089d, 5a4fe264a9c987fe">
                                <div class="form-text">List of Span IDs to query</div>
                            </div>

                            <!-- LabelName -->
                            <div class="form-section query-param" id="param-label-name">
                                <label for="label_name" class="form-label">Label Name</label>
                                <input type="text" class="form-control" id="label_name" name="label_name"
                                       value="{{ .LabelName }}" placeholder="service_name">
                                <div class="form-text">Label name to get values for</div>
                            </div>

                            <!-- Label Names filter for Series -->
                            <div class="form-section query-param" id="param-label-names">
                                <label for="label_names" class="form-label">Label Names (comma-separated)</label>
                                <input type="text" class="form-control" id="label_names" name="label_names"
                                       value="{{ .LabelNames }}" placeholder="service_name, namespace">
                                <div class="form-text">Filter which label names to return (empty = all)</div>
                            </div>

                            <!-- Step, GroupBy, Aggregation, Limit for time series -->
                            <div class="form-section query-param" id="param-step">
                                <label for="step" class="form-label">Step (seconds)</label>
                                <input type="number" class="form-control" id="step" name="step"
                                       value="{{ .Step }}" placeholder="auto" min="1">
                                <div class="form-text">Time step between data points (empty = auto, min 15s, ~100 points)</div>
                            </div>

                            <div class="form-section query-param" id="param-group-by">
                                <label for="group_by" class="form-label">Group By (comma-separated)</label>
                                <input type="text" class="form-control" id="group_by" name="group_by"
                                       value="{{ .GroupBy }}" placeholder="service_name">
                                <div class="form-text">Labels to group time series by</div>
                            </div>

                            <div class="form-section query-param" id="param-aggregation">
                                <label for="aggregation" class="form-label">Aggregation</label>
                                <select class="form-select" id="aggregation" name="aggregation">
                                    <option value="" {{ if eq .Aggregation "" }}selected{{ end }}>None</option>
                                    <option value="sum" {{ if eq .Aggregation "sum" }}selected{{ end }}>Sum</option>
                                    <option value="avg" {{ if eq .Aggregation "avg" }}selected{{ end }}>Average</option>
                                </select>
                                <div class="form-text">Aggregation type for time series</div>
                            </div>

                            <div class="form-section query-param" id="param-limit">
                                <label for="limit" class="form-label">Limit</label>
                                <input type="number" class="form-control" id="limit" name="limit"
                                       value="{{ .Limit }}" placeholder="0" min="0">
                                <div class="form-text">Maximum number of series (0 = unlimited)</div>
                            </div>

                            <div class="form-section query-param" id="param-heatmap-query-type">
                                <label for="heatmap_query_type" class="form-label">Heatmap Query Type</label>
                                <select class="form-select" id="heatmap_query_type" name="heatmap_query_type">
                                    <option value="HEATMAP_QUERY_TYPE_INDIVIDUAL" {{ if or (eq .HeatmapQueryType "") (eq .HeatmapQueryType "HEATMAP_QUERY_TYPE_INDIVIDUAL") }}selected{{ end }}>Individual Profiles</option>
                                    <option value="HEATMAP_QUERY_TYPE_SPAN" {{ if eq .HeatmapQueryType "HEATMAP_QUERY_TYPE_SPAN" }}selected{{ end }}>Span Profiles</option>
                                </select>
                                <div class="form-text">Type of profiles to query</div>
                            </div>

                            <div class="form-section query-param" id="param-exemplar-type">
                                <label for="exemplar_type" class="form-label">Exemplar Type</label>
                                <select class="form-select" id="exemplar_type" name="exemplar_type">
                                    <option value="" {{ if eq .ExemplarType "" }}selected{{ end }}>None</option>
                                    <option value="EXEMPLAR_TYPE_INDIVIDUAL" {{ if eq .ExemplarType "EXEMPLAR_TYPE_INDIVIDUAL" }}selected{{ end }}>Individual</option>
                                    <option value="EXEMPLAR_TYPE_SPAN" {{ if eq .ExemplarType "EXEMPLAR_TYPE_SPAN" }}selected{{ end }}>Span</option>
                                </select>
                                <div class="form-text">Type of exemplars to include in the response</div>
                            </div>

                            <!-- Diff parameters -->
                            <div class="diff-params" id="diff-params">
                                <h6 class="mb-3">Diff Parameters</h6>
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <strong>Left (baseline)</strong>
                                    </div>
                                    <div class="col-6">
                                        <strong>Right (comparison)</strong>
                                    </div>
                                </div>
                                <div class="row form-section">
                                    <div class="col-6">
                                        <label for="diff_left_selector" class="form-label">Label Selector</label>
                                        <input type="text" class="form-control form-control-sm" id="diff_left_selector" name="diff_left_selector"
                                               value="{{ .DiffLeftSelector }}" placeholder='{service_name="my-service"}'>
                                    </div>
                                    <div class="col-6">
                                        <label for="diff_right_selector" class="form-label">Label Selector</label>
                                        <input type="text" class="form-control form-control-sm" id="diff_right_selector" name="diff_right_selector"
                                               value="{{ .DiffRightSelector }}" placeholder='{service_name="my-service"}'>
                                    </div>
                                </div>
                                <div class="row form-section">
                                    <div class="col-6">
                                        <label for="diff_left_profile_type" class="form-label">Profile Type</label>
                                        <select class="form-select form-select-sm profile-type-select" id="diff_left_profile_type" name="diff_left_profile_type" data-initial-value="{{ .DiffLeftProfileType }}">
                                            <option value="">-- Select tenant first --</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <label for="diff_right_profile_type" class="form-label">Profile Type</label>
                                        <select class="form-select form-select-sm profile-type-select" id="diff_right_profile_type" name="diff_right_profile_type" data-initial-value="{{ .DiffRightProfileType }}">
                                            <option value="">-- Select tenant first --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row form-section">
                                    <div class="col-3">
                                        <label for="diff_left_start" class="form-label">Start</label>
                                        <input type="text" class="form-control form-control-sm" id="diff_left_start" name="diff_left_start"
                                               value="{{ .DiffLeftStart }}" placeholder="now-2h">
                                    </div>
                                    <div class="col-3">
                                        <label for="diff_left_end" class="form-label">End</label>
                                        <input type="text" class="form-control form-control-sm" id="diff_left_end" name="diff_left_end"
                                               value="{{ .DiffLeftEnd }}" placeholder="now-1h">
                                    </div>
                                    <div class="col-3">
                                        <label for="diff_right_start" class="form-label">Start</label>
                                        <input type="text" class="form-control form-control-sm" id="diff_right_start" name="diff_right_start"
                                               value="{{ .DiffRightStart }}" placeholder="now-1h">
                                    </div>
                                    <div class="col-3">
                                        <label for="diff_right_end" class="form-label">End</label>
                                        <input type="text" class="form-control form-control-sm" id="diff_right_end" name="diff_right_end"
                                               value="{{ .DiffRightEnd }}" placeholder="now">
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-3">
                                <button type="submit" class="btn btn-success" id="execute-btn">
                                    <i class="bi bi-play-fill"></i> Execute Query
                                </button>
                            </div>
                            <div id="query-error" class="alert alert-danger mt-3" style="display: none;"></div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-7 mt-4 mt-lg-0">
                    {{ if or .PlanTree .MetadataStats }}
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Query Plan</h5>
                            {{ if .MetadataQueryTime }}
                            <span class="badge bg-info">Metadata query: {{ .MetadataQueryTime }}</span>
                            {{ end }}
                        </div>
                        <div class="card-body">
                            {{ if .MetadataStats }}
                            <div class="stats-box mb-3">
                                <strong>Metadata Stats:</strong>
                                <pre class="mb-0 mt-2">{{ .MetadataStats }}</pre>
                            </div>
                            {{ end }}

                            {{ if .PlanTree }}
                            <ul class="nav nav-tabs mb-3" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="visual-tab" data-bs-toggle="tab" data-bs-target="#visual-view" type="button" role="tab">
                                        <i class="bi bi-diagram-3"></i> Visual
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="json-tab" data-bs-toggle="tab" data-bs-target="#json-view" type="button" role="tab">
                                        <i class="bi bi-code-slash"></i> JSON
                                    </button>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="visual-view" role="tabpanel">
                                    <div class="plan-tree">
                                        {{ template "treeNode" .PlanTree }}
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="json-view" role="tabpanel">
                                    <textarea class="form-control plan-textarea" id="plan_json" rows="15" readonly>{{ .PlanJSON }}</textarea>
                                </div>
                            </div>
                            {{ end }}
                        </div>
                    </div>
                    {{ else }}
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Results</h5>
                        </div>
                        <div class="card-body text-muted">
                            <p>Execute a query to see the query plan and execution trace.</p>
                        </div>
                    </div>
                    {{ end }}
                </div>
            </div>

            {{ if .ExecutionTree }}
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Execution Trace</h5>
                            <div>
                                {{ if .QueryResponseTime }}
                                <span class="badge bg-success">Response time: {{ formatDuration .QueryResponseTime }}</span>
                                {{ end }}
                                {{ if .DiagnosticsID }}
                                <span class="badge bg-secondary font-monospace">ID: {{ .DiagnosticsID }}</span>
                                {{ end }}
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="execution-tree">
                                {{ template "executionNode" .ExecutionTree }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ end }}
        </form>
    </div>
</main>
<footer class="footer mt-auto py-3">
    <div class="container">
        <small class="text-muted">Status @ {{ .Now.Format "2006-01-02 15:04:05.000" }}</small>
    </div>
</footer>
</body>
</html>

{{ define "treeNode" }}
{{ if . }}
<div class="tree-node tree-node-{{ .Type | lower }}">
    <div class="tree-node-header">
        {{ if eq .Type "MERGE" }}
        <i class="bi bi-arrows-collapse tree-node-icon"></i>
        <span class="tree-node-label">MERGE</span>
        <span class="badge bg-primary tree-node-badge">{{ len .Children }} children</span>
        <span class="badge bg-secondary tree-node-badge">{{ .TotalBlocks }} blocks total</span>
        {{ else if eq .Type "READ" }}
        <i class="bi bi-database tree-node-icon"></i>
        <span class="tree-node-label">READ</span>
        <span class="badge bg-success tree-node-badge">{{ .BlockCount }} blocks</span>
        {{ else }}
        <i class="bi bi-question-circle tree-node-icon"></i>
        <span class="tree-node-label">{{ .Type }}</span>
        {{ end }}
    </div>
    {{ if eq .Type "READ" }}
    {{ if .Blocks }}
    <div class="tree-node-blocks">
        {{ range .Blocks }}<div><code>{{ .ID }}</code> <span class="text-muted">(shard {{ .Shard }}, L{{ .CompactionLevel }}, {{ .Size }})</span></div>{{ end }}
        {{ if gt .BlockCount 5 }}<div><em>... and {{ subtract .BlockCount 5 }} more</em></div>{{ end }}
    </div>
    {{ end }}
    {{ end }}
    {{ if .Children }}
    <div class="tree-node-children">
        {{ range .Children }}
        {{ template "treeNode" . }}
        {{ end }}
    </div>
    {{ end }}
</div>
{{ end }}
{{ end }}

{{ define "executionNode" }}
{{ if . }}
<div class="exec-node exec-node-{{ .Type | lower }}">
    <div class="exec-node-header">
        <span class="exec-type">{{ .Type }}</span>
        <span class="badge bg-secondary">{{ .Executor }}</span>
        <span class="badge bg-warning text-dark" title="Started at">@{{ .RelativeStartStr }}</span>
        <span class="badge bg-info" title="Duration">{{ .DurationStr }}</span>
        {{ if .Stats }}
        <span class="badge bg-light text-dark">{{ .Stats.BlocksRead }} blocks, {{ .Stats.DatasetsProcessed }} datasets</span>
        {{ end }}
    </div>
    {{ if .Error }}
    <div class="exec-error text-danger"><small>Error: {{ .Error }}</small></div>
    {{ end }}
    {{ if and .Stats .Stats.BlockExecutions }}
    <div class="exec-blocks mt-2">
        <table class="table table-sm table-hover mb-0" style="font-size: 0.8rem;">
            <thead>
                <tr>
                    <th>Block ID</th>
                    <th>Start</th>
                    <th>Duration</th>
                    <th>End</th>
                    <th>Datasets</th>
                    <th>Size</th>
                    <th>Shard</th>
                    <th>Level</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Stats.BlockExecutions }}
                <tr>
                    <td><code>{{ .BlockID }}</code></td>
                    <td><span class="badge bg-warning text-dark">@{{ .RelativeStartStr }}</span></td>
                    <td><span class="badge bg-info">{{ .DurationStr }}</span></td>
                    <td><span class="badge bg-secondary">@{{ .RelativeEndStr }}</span></td>
                    <td>{{ .DatasetsProcessed }}</td>
                    <td>{{ .Size }}</td>
                    <td>{{ .Shard }}</td>
                    <td>L{{ .CompactionLevel }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
    </div>
    {{ end }}
    {{ if .Children }}
    <div class="exec-children">
        {{ range .Children }}
        {{ template "executionNode" . }}
        {{ end }}
    </div>
    {{ end }}
</div>
{{ end }}
{{ end }}
