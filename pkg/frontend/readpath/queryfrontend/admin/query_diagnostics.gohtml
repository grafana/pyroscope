<!DOCTYPE html>
<html data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Query Diagnostics</title>

    <link rel="stylesheet" href="/static/bootstrap-5.3.3.min.css">
    <link rel="stylesheet" href="/static/bootstrap-icons-1.8.1.css">
    <link rel="stylesheet" href="/static/pyroscope-styles.css">
    <script src="/static/bootstrap-5.3.3.bundle.min.js"></script>

    <style>
        .form-section {
            margin-bottom: 1.5rem;
        }
        .plan-textarea {
            font-family: monospace;
            font-size: 0.875rem;
        }
        .stats-box {
            background-color: var(--bs-secondary-bg);
            border-radius: 0.375rem;
            padding: 1rem;
            margin-top: 0.5rem;
        }
        /* Query Plan Tree Styles */
        .plan-tree {
            font-family: monospace;
            font-size: 0.875rem;
            padding: 1rem;
            background-color: var(--bs-secondary-bg);
            border-radius: 0.375rem;
            max-height: 400px;
            overflow-y: auto;
        }
        .tree-node-children {
            margin-left: 1.5rem;
            border-left: 1px dashed var(--bs-border-color);
            padding-left: 1rem;
        }
        .tree-node-header {
            display: flex;
            align-items: center;
            padding: 0.25rem 0;
        }
        .tree-node-icon {
            margin-right: 0.5rem;
            font-size: 1rem;
        }
        .tree-node-merge .tree-node-icon {
            color: #6ea8fe;
        }
        .tree-node-read .tree-node-icon {
            color: #75b798;
        }
        .tree-node-label {
            font-weight: 600;
        }
        .tree-node-badge {
            margin-left: 0.5rem;
            font-size: 0.75rem;
        }
        .tree-node-blocks {
            margin-left: 1.5rem;
            font-size: 0.8rem;
            color: var(--bs-secondary-color);
        }
        .tree-node-blocks code {
            font-size: 0.75rem;
        }
        /* Execution Tree Styles */
        .execution-tree {
            font-family: monospace;
            font-size: 0.875rem;
            padding: 1rem;
            background-color: var(--bs-secondary-bg);
            border-radius: 0.375rem;
        }
        .exec-node {
            margin: 0.25rem 0;
        }
        .exec-node-merge > .exec-node-header {
            border-left: 3px solid #0d6efd;
            padding-left: 0.5rem;
        }
        .exec-node-read > .exec-node-header {
            border-left: 3px solid #198754;
            padding-left: 0.5rem;
        }
        .exec-node-header {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            flex-wrap: wrap;
        }
        .exec-children {
            margin-left: 1.5rem;
            border-left: 1px solid var(--bs-border-color);
            padding-left: 0.5rem;
        }
        .exec-error {
            margin-left: 0.5rem;
            font-size: 0.8rem;
        }
        .exec-type {
            font-weight: 600;
        }
        .exec-blocks {
            margin-left: 0.5rem;
        }
        .exec-blocks table {
            margin-bottom: 0;
        }
        .exec-blocks code {
            font-size: 0.75rem;
        }
        /* Query parameter visibility */
        .query-param {
            display: none;
        }
    </style>
</head>
<body>
<main>
    <div class="container mt-5">
        <div class="header row border-bottom py-3 flex-column-reverse flex-sm-row">
            <div class="col-12 col-sm-9 text-center text-sm-start">
                <h1>Query Diagnostics</h1>
                <p class="text-muted">
                    Debug V2 query execution by building and executing query plans
                    <span class="ms-2">|</span>
                    <a href="/query-diagnostics/list" class="ms-2">
                        <i class="bi bi-clock-history"></i> View Stored Diagnostics
                    </a>
                </p>
            </div>
            <div class="col-12 col-sm-3 text-center text-sm-end mb-3 mb-sm-0">
                <a href="/">
                    <img alt="Pyroscope logo" class="pyroscope-brand" src="/static/pyroscope-logo.png">
                </a>
            </div>
        </div>

        {{ if .Error }}
        <div class="alert alert-danger mt-3" role="alert">
            <strong>Error:</strong> {{ .Error }}
        </div>
        {{ end }}

        <form action="" method="POST">
            <div class="row mt-4">
                <div class="col-12 col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Query Parameters</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-section">
                                <label for="tenant_id" class="form-label">Tenant ID</label>
                                <input type="text" class="form-control" id="tenant_id" name="tenant_id"
                                       value="{{ .TenantID }}" placeholder="anonymous" list="tenant_list" required>
                                <datalist id="tenant_list">
                                    {{ range .Tenants }}
                                    <option value="{{ . }}">
                                    {{ end }}
                                </datalist>
                            </div>

                            <div class="row form-section">
                                <div class="col-6">
                                    <label for="start_time" class="form-label">Start Time</label>
                                    <input type="text" class="form-control" id="start_time" name="start_time"
                                           value="{{ .StartTime }}" placeholder="now-30m" required>
                                </div>
                                <div class="col-6">
                                    <label for="end_time" class="form-label">End Time</label>
                                    <input type="text" class="form-control" id="end_time" name="end_time"
                                           value="{{ .EndTime }}" placeholder="now" required>
                                </div>
                            </div>

                            <div class="form-section">
                                <label for="query_type" class="form-label">Query Type</label>
                                <select class="form-select" id="query_type" name="query_type" onchange="updateQueryParams()">
                                    <option value="QUERY_PPROF" {{ if eq .QueryType "QUERY_PPROF" }}selected{{ end }}>QUERY_PPROF</option>
                                    <option value="QUERY_TREE" {{ if eq .QueryType "QUERY_TREE" }}selected{{ end }}>QUERY_TREE</option>
                                    <option value="QUERY_TIME_SERIES" {{ if eq .QueryType "QUERY_TIME_SERIES" }}selected{{ end }}>QUERY_TIME_SERIES</option>
                                    <option value="QUERY_HEATMAP" {{ if eq .QueryType "QUERY_HEATMAP" }}selected{{ end }}>QUERY_HEATMAP</option>
                                    <option value="QUERY_LABEL_NAMES" {{ if eq .QueryType "QUERY_LABEL_NAMES" }}selected{{ end }}>QUERY_LABEL_NAMES</option>
                                    <option value="QUERY_LABEL_VALUES" {{ if eq .QueryType "QUERY_LABEL_VALUES" }}selected{{ end }}>QUERY_LABEL_VALUES</option>
                                    <option value="QUERY_SERIES_LABELS" {{ if eq .QueryType "QUERY_SERIES_LABELS" }}selected{{ end }}>QUERY_SERIES_LABELS</option>
                                </select>
                            </div>

                            <div class="form-section">
                                <label for="label_selector" class="form-label">Label Selector</label>
                                <input type="text" class="form-control" id="label_selector" name="label_selector"
                                       value="{{ .LabelSelector }}" placeholder='{service_name="my-service"}'>
                            </div>

                            <!-- PPROF/TREE: MaxNodes -->
                            <div class="form-section query-param" id="param-max-nodes">
                                <label for="max_nodes" class="form-label">Max Nodes</label>
                                <input type="number" class="form-control" id="max_nodes" name="max_nodes"
                                       value="{{ .MaxNodes }}" placeholder="16384">
                                <div class="form-text">Maximum number of nodes in the result (PPROF/TREE)</div>
                            </div>

                            <!-- LABEL_VALUES: LabelName -->
                            <div class="form-section query-param" id="param-label-name">
                                <label for="label_name" class="form-label">Label Name</label>
                                <input type="text" class="form-control" id="label_name" name="label_name"
                                       value="{{ .LabelName }}" placeholder="service_name">
                                <div class="form-text">Label name to get values for</div>
                            </div>

                            <!-- SERIES_LABELS: LabelNames -->
                            <div class="form-section query-param" id="param-series-label-names">
                                <label for="series_label_names" class="form-label">Label Names (comma-separated)</label>
                                <input type="text" class="form-control" id="series_label_names" name="series_label_names"
                                       value="{{ .SeriesLabelNames }}" placeholder="service_name,__profile_type__">
                                <div class="form-text">Filter returned labels to these names (empty = all)</div>
                            </div>

                            <!-- TIME_SERIES: Step, GroupBy, Limit -->
                            <div class="form-section query-param" id="param-step">
                                <label for="step" class="form-label">Step (seconds)</label>
                                <input type="number" class="form-control" id="step" name="step"
                                       value="{{ .Step }}" placeholder="auto" step="any">
                                <div class="form-text">Time step between data points (leave empty for auto)</div>
                            </div>

                            <div class="form-section query-param" id="param-group-by">
                                <label for="group_by" class="form-label">Group By (comma-separated)</label>
                                <input type="text" class="form-control" id="group_by" name="group_by"
                                       value="{{ .GroupBy }}" placeholder="service_name">
                                <div class="form-text">Labels to group time series by</div>
                            </div>

                            <div class="form-section query-param" id="param-limit">
                                <label for="limit" class="form-label">Limit</label>
                                <input type="number" class="form-control" id="limit" name="limit"
                                       value="{{ .Limit }}" placeholder="0">
                                <div class="form-text">Maximum number of series (0 = unlimited)</div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary" name="action" value="create_plan">
                                    <i class="bi bi-diagram-3"></i> Create Query Plan
                                </button>
                                <button type="submit" class="btn btn-success" name="action" value="create_and_execute">
                                    <i class="bi bi-play-fill"></i> Execute Query
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-8 mt-4 mt-lg-0">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Query Plan</h5>
                            {{ if .MetadataQueryTime }}
                            <span class="badge bg-info">Metadata query: {{ .MetadataQueryTime }}</span>
                            {{ end }}
                        </div>
                        <div class="card-body">
                            {{ if .MetadataStats }}
                            <div class="stats-box mb-3">
                                <strong>Metadata Stats:</strong>
                                <pre class="mb-0 mt-2">{{ .MetadataStats }}</pre>
                            </div>
                            {{ end }}

                            {{ if .PlanTree }}
                            <ul class="nav nav-tabs mb-3" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="visual-tab" data-bs-toggle="tab" data-bs-target="#visual-view" type="button" role="tab">
                                        <i class="bi bi-diagram-3"></i> Visual
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="json-tab" data-bs-toggle="tab" data-bs-target="#json-view" type="button" role="tab">
                                        <i class="bi bi-code-slash"></i> JSON (editable)
                                    </button>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="visual-view" role="tabpanel">
                                    <div class="plan-tree">
                                        {{ template "treeNode" .PlanTree }}
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="json-view" role="tabpanel">
                                    <textarea class="form-control plan-textarea" id="plan_json" name="plan_json" rows="15">{{ .PlanJSON }}</textarea>
                                    <div class="form-text">You can modify this plan before executing the query</div>
                                </div>
                            </div>
                            {{ else }}
                            <div class="form-section">
                                <label for="plan_json" class="form-label">Plan JSON (editable)</label>
                                <textarea class="form-control plan-textarea" id="plan_json" name="plan_json" rows="15">{{ .PlanJSON }}</textarea>
                                <div class="form-text">You can modify this plan before executing the query</div>
                            </div>
                            {{ end }}

                            <div class="d-grid gap-2 d-md-flex mt-3">
                                <button type="submit" class="btn btn-success" name="action" value="execute_query" {{ if not .PlanJSON }}disabled{{ end }}>
                                    <i class="bi bi-play-fill"></i> Execute Query
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{ if .ExecutionTree }}
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Execution Trace</h5>
                            <div>
                                {{ if .QueryResponseTime }}
                                <span class="badge bg-success">Response time: {{ formatDuration .QueryResponseTime }}</span>
                                {{ end }}
                                {{ if .DiagnosticsID }}
                                <span class="badge bg-secondary font-monospace">ID: {{ .DiagnosticsID }}</span>
                                {{ end }}
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="execution-tree">
                                {{ template "executionNode" .ExecutionTree }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ end }}
        </form>
    </div>
</main>
<footer class="footer mt-auto py-3">
    <div class="container">
        <small class="text-muted">Status @ {{ .Now.Format "2006-01-02 15:04:05.000" }}</small>
    </div>
</footer>
<script>
    function updateQueryParams() {
        const queryType = document.getElementById('query_type').value;

        // Hide all query params first
        document.querySelectorAll('.query-param').forEach(el => {
            el.style.display = 'none';
        });

        // Show relevant params based on query type
        switch (queryType) {
            case 'QUERY_PPROF':
            case 'QUERY_TREE':
                document.getElementById('param-max-nodes').style.display = 'block';
                break;
            case 'QUERY_TIME_SERIES':
            case 'QUERY_HEATMAP':
                document.getElementById('param-step').style.display = 'block';
                document.getElementById('param-group-by').style.display = 'block';
                document.getElementById('param-limit').style.display = 'block';
                break;
            case 'QUERY_LABEL_VALUES':
                document.getElementById('param-label-name').style.display = 'block';
                break;
            case 'QUERY_SERIES_LABELS':
                document.getElementById('param-series-label-names').style.display = 'block';
                break;
            case 'QUERY_LABEL_NAMES':
                // No additional parameters
                break;
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', updateQueryParams);
</script>
</body>
</html>

{{ define "treeNode" }}
{{ if . }}
<div class="tree-node tree-node-{{ .Type | lower }}">
    <div class="tree-node-header">
        {{ if eq .Type "MERGE" }}
        <i class="bi bi-arrows-collapse tree-node-icon"></i>
        <span class="tree-node-label">MERGE</span>
        <span class="badge bg-primary tree-node-badge">{{ len .Children }} children</span>
        <span class="badge bg-secondary tree-node-badge">{{ .TotalBlocks }} blocks total</span>
        {{ else if eq .Type "READ" }}
        <i class="bi bi-database tree-node-icon"></i>
        <span class="tree-node-label">READ</span>
        <span class="badge bg-success tree-node-badge">{{ .BlockCount }} blocks</span>
        {{ else }}
        <i class="bi bi-question-circle tree-node-icon"></i>
        <span class="tree-node-label">{{ .Type }}</span>
        {{ end }}
    </div>
    {{ if eq .Type "READ" }}
    {{ if .Blocks }}
    <div class="tree-node-blocks">
        {{ range .Blocks }}<div><code>{{ .ID }}</code> <span class="text-muted">(shard {{ .Shard }}, L{{ .CompactionLevel }}, {{ .Size }})</span></div>{{ end }}
        {{ if gt .BlockCount 5 }}<div><em>... and {{ subtract .BlockCount 5 }} more</em></div>{{ end }}
    </div>
    {{ end }}
    {{ end }}
    {{ if .Children }}
    <div class="tree-node-children">
        {{ range .Children }}
        {{ template "treeNode" . }}
        {{ end }}
    </div>
    {{ end }}
</div>
{{ end }}
{{ end }}

{{ define "executionNode" }}
{{ if . }}
<div class="exec-node exec-node-{{ .Type | lower }}">
    <div class="exec-node-header">
        <span class="exec-type">{{ .Type }}</span>
        <span class="badge bg-secondary">{{ .Executor }}</span>
        <span class="badge bg-warning text-dark" title="Started at">@{{ .RelativeStartStr }}</span>
        <span class="badge bg-info" title="Duration">{{ .DurationStr }}</span>
        {{ if .Stats }}
        <span class="badge bg-light text-dark">{{ .Stats.BlocksRead }} blocks, {{ .Stats.DatasetsProcessed }} datasets</span>
        {{ end }}
    </div>
    {{ if .Error }}
    <div class="exec-error text-danger"><small>Error: {{ .Error }}</small></div>
    {{ end }}
    {{ if and .Stats .Stats.BlockExecutions }}
    <div class="exec-blocks mt-2">
        <table class="table table-sm table-hover mb-0" style="font-size: 0.8rem;">
            <thead>
                <tr>
                    <th>Block ID</th>
                    <th>Start</th>
                    <th>Duration</th>
                    <th>End</th>
                    <th>Datasets</th>
                    <th>Size</th>
                    <th>Shard</th>
                    <th>Level</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Stats.BlockExecutions }}
                <tr>
                    <td><code>{{ .BlockID }}</code></td>
                    <td><span class="badge bg-warning text-dark">@{{ .RelativeStartStr }}</span></td>
                    <td><span class="badge bg-info">{{ .DurationStr }}</span></td>
                    <td><span class="badge bg-secondary">@{{ .RelativeEndStr }}</span></td>
                    <td>{{ .DatasetsProcessed }}</td>
                    <td>{{ .Size }}</td>
                    <td>{{ .Shard }}</td>
                    <td>L{{ .CompactionLevel }}</td>
                </tr>
                {{ end }}
            </tbody>
        </table>
    </div>
    {{ end }}
    {{ if .Children }}
    <div class="exec-children">
        {{ range .Children }}
        {{ template "executionNode" . }}
        {{ end }}
    </div>
    {{ end }}
</div>
{{ end }}
{{ end }}
