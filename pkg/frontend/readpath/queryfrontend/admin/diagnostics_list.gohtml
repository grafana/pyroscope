<!DOCTYPE html>
<html data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Stored Diagnostics</title>

    <link rel="stylesheet" href="/static/bootstrap-5.3.3.min.css">
    <link rel="stylesheet" href="/static/bootstrap-icons-1.8.1.css">
    <link rel="stylesheet" href="/static/pyroscope-styles.css">
    <script src="/static/bootstrap-5.3.3.bundle.min.js"></script>

    <style>
        .tenant-list {
            max-height: calc(100vh - 250px);
            overflow-y: auto;
        }
        .tenant-item {
            cursor: pointer;
            padding: 0.5rem 1rem;
            border-bottom: 1px solid var(--bs-border-color);
        }
        .tenant-item:hover {
            background-color: var(--bs-tertiary-bg);
        }
        .tenant-item.active {
            background-color: var(--bs-primary);
            color: white;
        }
        .diagnostics-table {
            font-size: 0.875rem;
        }
        .diagnostics-table td, .diagnostics-table th {
            vertical-align: middle;
        }
        .diagnostics-table .col-narrow {
            white-space: nowrap;
            width: 1px;
        }
        .diagnostics-table .col-payload {
            width: 100%;
            max-width: 0;
        }
        .query-type-badge {
            font-family: monospace;
            font-size: 0.75rem;
        }
        .payload-json {
            display: block;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-size: 0.75rem;
        }
    </style>
</head>
<body>
<main>
    <div class="container-fluid mt-4">
        <div class="header row border-bottom py-3 flex-column-reverse flex-sm-row">
            <div class="col-12 col-sm-9 text-center text-sm-start">
                <h1>Stored Diagnostics</h1>
                <p class="text-muted">
                    Browse and view stored query diagnostics
                    <span class="ms-2">|</span>
                    <a href="/query-diagnostics" class="ms-2">
                        <i class="bi bi-plus-circle"></i> New Query
                    </a>
                </p>
            </div>
            <div class="col-12 col-sm-3 text-center text-sm-end mb-3 mb-sm-0">
                <a href="/">
                    <img alt="Pyroscope logo" class="pyroscope-brand" src="/static/pyroscope-logo.png">
                </a>
            </div>
        </div>

        {{ if .Error }}
        <div class="alert alert-danger mt-3" role="alert">
            <strong>Error:</strong> {{ .Error }}
        </div>
        {{ end }}

        <div class="row mt-4">
            <!-- Tenant List -->
            <div class="col-12 col-md-3 col-lg-2">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Tenants</h6>
                    </div>
                    <div class="card-body p-0">
                        {{ if .Tenants }}
                        <div class="tenant-list">
                            {{ range .Tenants }}
                            <a href="?tenant={{ . }}" class="tenant-item d-block text-decoration-none {{ if eq . $.SelectedTenant }}active{{ end }}">
                                {{ . }}
                            </a>
                            {{ end }}
                        </div>
                        {{ else }}
                        <div class="p-3 text-muted">
                            <small>No diagnostics stored yet</small>
                        </div>
                        {{ end }}
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/query-diagnostics" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-plus-circle"></i> New Query
                    </a>
                </div>
            </div>

            <!-- Diagnostics Table -->
            <div class="col-12 col-md-9 col-lg-10 mt-4 mt-md-0">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            {{ if .SelectedTenant }}
                            Diagnostics for <code>{{ .SelectedTenant }}</code>
                            {{ else }}
                            Select a tenant to view diagnostics
                            {{ end }}
                        </h6>
                        {{ if .Diagnostics }}
                        <span class="badge bg-secondary">{{ len .Diagnostics }} entries</span>
                        {{ end }}
                    </div>
                    <div class="card-body">
                        {{ if .SelectedTenant }}
                            {{ if .Diagnostics }}
                            <div class="table-responsive">
                                <table class="table table-hover diagnostics-table mb-0">
                                    <thead>
                                        <tr>
                                            <th class="col-narrow">Created</th>
                                            <th class="col-narrow">Method</th>
                                            <th class="col-payload">Payload</th>
                                            <th class="col-narrow">Time</th>
                                            <th class="col-narrow">Size</th>
                                            <th class="col-narrow"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{ $tenant := .SelectedTenant}}
                                        {{ range .Diagnostics }}
                                        <tr>
                                            <td class="col-narrow">
                                                <small>{{ formatTime .CreatedAt }}</small>
                                            </td>
                                            <td class="col-narrow">
                                                <span class="badge bg-info query-type-badge">{{ .Method }}</span>
                                            </td>
                                            <td class="col-payload">
                                                {{ if .Request }}
                                                <code class="payload-json" title="{{ printf "%s" .Request }}">{{ printf "%s" .Request }}</code>
                                                {{ else }}
                                                <span class="text-muted">-</span>
                                                {{ end }}
                                            </td>
                                            <td class="col-narrow">
                                                {{ if .ResponseTimeMs }}
                                                <span class="badge bg-success">{{ formatMs .ResponseTimeMs }}</span>
                                                {{ else }}
                                                <span class="text-muted">-</span>
                                                {{ end }}
                                            </td>
                                            <td class="col-narrow">
                                                <span class="badge bg-secondary">{{ formatBytes .ResponseSizeBytes }}</span>
                                            </td>
                                            <td class="col-narrow">
                                                <a href="/query-diagnostics?load={{ .ID }}&tenant={{ $tenant }}" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                        {{ end }}
                                    </tbody>
                                </table>
                            </div>
                            {{ else }}
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-inbox display-4"></i>
                                <p class="mt-3">No diagnostics stored for this tenant</p>
                            </div>
                            {{ end }}
                        {{ else }}
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-arrow-left display-4"></i>
                            <p class="mt-3">Select a tenant from the list to view their stored diagnostics</p>
                        </div>
                        {{ end }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<footer class="footer mt-auto py-3">
    <div class="container">
        <small class="text-muted">Status @ {{ .Now.Format "2006-01-02 15:04:05.000" }}</small>
    </div>
</footer>
</body>
</html>
