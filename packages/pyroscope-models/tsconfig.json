{
  "extends": "../../tsconfig.json",
  "baseUrl": ".",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "outDir": "./dist"
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "**/*.spec.ts"]
}
