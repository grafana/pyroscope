{
  "extends": "../../tsconfig.json",
  "include": ["./src", "../../lib"],
  "exclude": ["src/**/*.spec.tsx", "src/**/*.spec.ts"],
  "baseUrl": ".",
  "compilerOptions": {
    "resolveJsonModule": false,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "outDir": "./dist"
  }
}
